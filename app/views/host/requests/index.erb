<ul id='requests_made'>
  <h1>Host <%= current_user.name %>'s requests: </h1>
  <% @requests.each do |request| %>
    <% if request.space.user.id == current_user.id %>
     <li> Host: <%= request.space.user.name + " " + request.space.user.surname%>
      </br>
      Description: <%= request.space.description %></br>
      Price per night: Â£<%= '%.2f' % request.space.price %></li>
      </br>
      Requested date: <%= request.requested_date %>
      </br>
      <form action="/bookings" method="post">
        <input type='hidden' name='booking' value="<%=request.id%>">
        <input type="submit" id='<%=request.id%>' value="Confirm">
      </form>
      </br>
    <% end %>
 <% end %>
</ul>
